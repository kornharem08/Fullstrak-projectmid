<% include ../partials/header %>
<div class="row">
    <div class="col-sm-6 col-sm-offset-3 text-center">
      
        <div id="imaginary_container"> 
            <div class="input-group stylish-input-group">
                <input type="text" id="myInput" class="form-control"  placeholder="Search" >
                <span class="input-group-addon">
                    <button type="submit">
                        <span class="glyphicon glyphicon-search"></span>
                    </button>  
                </span>
            </div>
        </div>
        <p id="margintextp">Type something in the input field to search the table for Email  or Password</p>
    </div>
</div>

<div class="card mb-3" id ="headertop">
        <div class="card-header">
          <i class="fas fa-table"></i>
          Data Table Users</div>
        <div class="card-body">
                <table class = "table" width="100%" cellspacing="0">
                                <thead>
                                    <tr>
                                    <td><b>ID</b></td>
                                    <td><b>email</b></td>
                                    <td><b>password</b></td>
                                    <td><a class="btn btn-success" href="/insert_user" role="button">Add New</a></td>
                                    </tr>
                            </thead>
                                <tbody id="myTable">
                                <% users.forEach(function(user){ %>
                                    <tr>
                                        <td scope ="row"><%= user.user_id %></td>
                                        <td><%= user.email %></td>
                                        <td><%= user.password %></td>
                                        <td><a class="btn btn-success" href="/users/<%= user.user_id %>" role="button">EDIT</a></td>
                                        
                                        
                                </tr>
                                <% }); %>
                                </tbody>
                                </table>
          </div>
        </div>
        <div class="card-footer small text-muted">Updated yesterday at 11:59 PM</div>
      </div>

